<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".desserts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icecream"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Ice Cream (P15)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnIceCream"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cokefloat"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Coke Float (P100)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnCokeFloat"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="190dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sliceofcake"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Slice of Cake (P60)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnSliceOfCake"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cookies"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Cookies (P55)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnCookies"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/donuts"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Donuts (P55)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnDonuts"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>


</FrameLayout>