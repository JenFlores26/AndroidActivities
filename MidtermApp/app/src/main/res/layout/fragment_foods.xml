<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foods">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/friedChicken"
            android:layout_width="140dp"
                android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Fried Chicken (P1)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnFriedChicken"
            android:onClick="add_to_list"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spag"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Spaghetti (P100)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnSpag"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="add_to_list"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="190dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/burgerSteak"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Burger Steak (P60)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnBurgerSteak"
            android:onClick="add_to_list"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hamburger"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Hamburger (P55)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnHamburger"
            android:onClick="add_to_list"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/frenchFries"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="French fries (P40)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnfrenchFries"
            android:onClick="add_to_list"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>

</FrameLayout>