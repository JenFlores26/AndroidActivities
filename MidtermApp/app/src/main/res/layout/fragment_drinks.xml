<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drinks">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icedtea"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Iced Tea (P15)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnIceTea"
            android:onClick="add_to_list"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/softdrink"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Softdrink (P100)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnSoftdrink"
            android:onClick="add_to_list"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="190dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/juice"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Juice (P60)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnJuice"
            android:onClick="add_to_list"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/water"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Water (P55)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnWater"
            android:onClick="add_to_list"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/milktea"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Milk Tea (P55)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnMilkTea"
            android:onClick="add_to_list"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>

</FrameLayout>